<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="actionBarStyle">@style/MainActionBar</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="MainActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/dark_gray</item>
        <item name="background">@color/dark_gray</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:actionBarSize">@dimen/actionbar_height</item>
        <item name="actionBarSize">@dimen/actionbar_height</item>
        <item name="android:titleTextStyle">@style/MainThemeActionBarTitleTextStyle</item>
        <item name="titleTextStyle">@style/MainThemeActionBarTitleTextStyle</item>
    </style>

    <style name="MainThemeActionBarTitleTextStyle" parent="TextAppearance.AppCompat.Widget.Base.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/gap_small</item>
    </style>

    <style name="HoloColorsAppTheme" parent="@style/_HoloColorsAppTheme"/>

    <style name="_HoloColorsAppTheme" parent="Theme.AppCompat.Light">

        <item name="android:editTextStyle">@style/EditTextHoloColorsAppTheme</item>

        <item name="android:textColorHighlight">#99ff0000</item>

        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewHoloColorsAppTheme</item>

        <item name="android:checkboxStyle">@style/CheckBoxHoloColorsAppTheme</item>

        <item name="android:radioButtonStyle">@style/RadioButtonHoloColorsAppTheme</item>

        <item name="android:buttonStyle">@style/ButtonHoloColorsAppTheme</item>

        <item name="android:imageButtonStyle">@style/ImageButtonHoloColorsAppTheme</item>

        <item name="android:spinnerStyle">@style/SpinnerHoloColorsAppTheme</item>

        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemHoloColorsAppTheme</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarHoloColorsAppTheme</item>

        <item name="android:seekBarStyle">@style/SeekBarHoloColorsAppTheme</item>

        <item name="android:buttonStyleToggle">@style/ToggleHoloColorsAppTheme</item>

        <item name="android:listViewStyle">@style/ListViewHoloColorsAppTheme</item>

        <item name="android:listViewWhiteStyle">@style/ListViewHoloColorsAppTheme.White</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItemHoloColorsAppTheme</item>

    </style>


</resources>