<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".LoginActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_login_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_medium"
        android:clickable="true"
        android:hint="@string/login_hint"
        android:padding="@dimen/gap_mhigh"
        style="@style/AutoCompleteTextViewHoloColorsAppTheme"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_medium"
        android:clickable="true"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        style="@style/AutoCompleteTextViewHoloColorsAppTheme"
        android:padding="@dimen/gap_mhigh"
        android:singleLine="true" />

    <CheckBox android:id="@+id/checkbox_recordar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recordar_credenciales"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_medium"
        style="@style/CheckBoxHoloColorsAppTheme"
    />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:layout_marginTop="@dimen/gap_xhigh"
        android:padding = "@dimen/gap_mhigh"
        style="@style/ButtonHoloColorsAppTheme"
        android:textAllCaps="true"
        android:text="@string/acceder" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/ProgressBarHoloColorsAppTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true" />

</LinearLayout>
