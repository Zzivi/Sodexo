<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:iconView="http://schemas.android.com/apk/res-auto"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

	<com.infojobs.app.base.view.widget.IconView
			android:id="@+id/iv_icon_text_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			/>
	<com.infojobs.app.base.view.widget.CustomFontTextView
			android:id="@+id/tv_icon_text_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/gap_small"
			android:layout_toRightOf="@id/iv_icon_text_icon"
			android:layout_centerVertical="true"
			/>
</RelativeLayout>